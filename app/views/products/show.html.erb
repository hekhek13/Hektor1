
<div class="container">
  <div class="row" data-product-id="<%= @product.id %>">
  

  <p id="notice"><%= notice %></p>

  <div class="col-md-8">


<p>
  <%= image_tag(@product.image_url, width: "350", class: "img-responsive", id: "img-zoom", data_zoom_image:@product.image_url) %>
<p>

  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.colour %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
 

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

<%= form_tag "/static_pages/create" do %>
  <%= render partial: "products/stripe_checkout_button" %>
<% end %>

<%= render 'new_comment' %>
<div class="alert alert-info" style="display:none" role="alert">Action Cable WORKS!!</div>
<%= render 'comments' %>
<%= will_paginate @comments %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

</div>
</div>
</div>